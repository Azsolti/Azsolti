def remove(string):
    splitstring = list(string)
    for n in range(1, len(splitstring), 1):
        if n >= len(splitstring):
            break
        print(n)
        splitstring.pop(n)
    return("".join(splitstring))
        
print(remove("This is where we remove from"))


